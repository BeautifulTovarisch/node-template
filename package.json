	"sources": [
	    "{client,server}/**/*.{js,jsx}",
	    "!*.bundle.js"
	],
	"require": [
	    "babel-register"
	]
    },
    "repository": {},
    "author": "",
    "dependencies": {
	"body-parser": "^1.18.2",
	"express": "^4.16.2",
	"method-override": "^2.3.10",
	"morgan": "^1.9.0",
	"passport": "^0.4.0",
    },
    "devDependencies": {
	"ava": "^0.25.0",
	"nodemon": "^1.12.1",
	"npm-run-all": "^4.1.3"
    }
}
