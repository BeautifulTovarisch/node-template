{
    "name": "node-scaffolding",
    "version": "0.0.0",
    "description": "node application with webpack-powered single-page-app",
    "main": "main.js",
    "scripts": {
        "test": "ava --color",
        "dev-build": "webpack --env=dev --config webpack.dev.config.js --colors",
        "dev-server": "webpack-dev-server --hot --colors --config webpack.dev.config.js --watch-poll",
        "api-server": "nodemon server.js",
        "production-build": "webpack --env=production --config webpack.production.config.js --colors",
        "start": "run-p dev-server api-server test"
    },
    "ava": {
        "babel": {},
        "watch": true,
        "files": [
            "{client,server}/**/*.spec.js",
            "!node_modules/"
        ],
        "sources": [
            "{client,server}/**/*.{js,jsx}",
            "!*.bundle.js"
        ],
        "require": [
            "babel-register"
        ]
    },
    "repository": {},
    "author": "",
    "dependencies": {
        "body-parser": "^1.18.2",
        "d3": "^4.6.0",
        "express": "^4.16.2",
        "method-override": "^2.3.10",
        "morgan": "^1.9.0",
        "passport": "^0.4.0",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "react-router": "^3.0.2",
        "react-router-dom": "^4.1.1"
    },
    "devDependencies": {
        "ava": "^0.25.0",
        "babel-core": "^6.23.1",
        "babel-loader": "^6.3.2",
        "babel-polyfill": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.23.0",
        "babel-register": "^6.26.0",
        "css-loader": "^0.26.1",
        "faucet": "^0.0.1",
        "file-loader": "^0.10.0",
        "imports-loader": "^0.7.0",
        "lodash": "^4.17.4",
        "mkdirp": "^0.5.1",
        "nodemon": "^1.12.1",
        "npm-run-all": "^4.1.3",
        "react-css-modules": "^4.1.0",
        "react-test-renderer": "^16.4.0",
        "style-loader": "^0.13.1",
        "uglify-js": "^2.8.22",
        "uglifyjs-webpack-plugin": "^0.4.3",
        "url-loader": "^0.5.7",
        "webpack": "^2.2.1",
        "webpack-dev-server": "^2.4.1",
        "webpack-merge": "^4.1.0"
    },
    "-vs-binding": {
        "AfterBuild": [
            "dev-build"
        ]
    }
}
