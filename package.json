{
    "name": "node-scaffolding",
    "version": "0.0.0",
    "description": "node application with webpack-powered single-page-app",
    "main": "main.js",
    "scripts": {
	"server": "nodemon server.js",
	"test": "ava --color",
	"start": "run-p server test"
    },
    "ava": {
	"babel": {},
	"watch": true,
	"files": [
	    "{client,server}/**/*.spec.js",
	    "!node_modules/"
